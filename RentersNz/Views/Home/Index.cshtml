@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to RentersNz</h1>
    <p>Explore our collection of rental properties.</p>
</div>

<div id="house-grid" class="row justify-content-center"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        generateHouses();
    });

    function generateHouses() {
        var houseGrid = $('#house-grid');
        var collectionId = '1163637'; // Example collection ID with house images

        for (var i = 0; i < 300; i++) { // Adjusted to 300 items
            var price = Math.floor(Math.random() * 6900000) + 100000; // Random price between $100,000 and $7,000,000
            var houseImage = 'https://source.unsplash.com/collection/' + collectionId + '/300x200/?sig=' + i; // Fetch images from a specific collection

            var houseHtml = '<div class="col-md-3 house">' +
                '<img src="' + houseImage + '" class="house-image" alt="House" onerror="this.onerror=null; this.src=\'fallback-image.png\';">' +
                '<div class="price">Price: $' + price.toLocaleString() + '</div>' +
                '</div>';

            houseGrid.append(houseHtml);
        }
    }
</script>

<style>
    .house-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
        display: block;
    }

    .house {
        margin-bottom: 20px;
        position: relative;
        overflow: hidden;
        border-radius: 10px;
        text-align: center; /* Center align the price text */
    }

    .price {
        margin-top: 10px; /* Add space between the image and the price */
        color: #333;
        font-weight: bold;
    }
</style>
