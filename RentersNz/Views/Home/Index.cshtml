@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to RentersNz</h1>
    <p>Explore our collection of rental properties.</p>
</div>

<div id="house-grid" class="row justify-content-center"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        generateHouses();
    });

    function generateHouses() {
        var houseGrid = $('#house-grid');

        for (var i = 0; i < 500; i++) {
            var price = Math.floor(Math.random() * 6900000) + 100000; // Random price between $100,000 and $7,000,000
            var houseImage = 'https://source.unsplash.com/300x200/?house&' + i; // Adding unique identifier

            var houseHtml = '<div class="col-md-3 house">' +
                '<img src="' + houseImage + '" class="house-image" alt="House">' +
                '<div class="price">Price: $' + price.toLocaleString() + '</div>' +
                '</div>';

            houseGrid.append(houseHtml);
        }
    }
</script>

<style>
    .house-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .house {
        margin-bottom: 20px;
        position: relative;
        overflow: hidden; /* Ensures that the price text is not cropped */
        border-radius: 10px;
    }

    .price {
        position: absolute;
        bottom: 10px;
        left: 10px;
        color: #fff;
        padding: 5px 10px; /* Add padding to make the price text more visible */
        border-radius: 5px;
    }
</style>
