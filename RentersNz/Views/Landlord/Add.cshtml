@{
}
@model RentersNz.Models.AddLandlordViewModel

<h1>Add Landlord</h1>

<form method="post">
<div class="mt-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name"/>
</div>

<div class="mt-3">
    <label class="form-label">Email</label>
    <input type="email" class="form-control" asp-for="Email" />
</div>

<div class="mt-3">
    <label class="form-label">PhoneNumber</label>
    <input type="text" class="form-control" asp-for="PhoneNumber"/>
</div>

<div class="mt-3">
    <label class="form-label">Address</label>
    <input type="text" class="form-control" asp-for="Address"/>
</div>

<div class="mt-3">
    <label class="form-label">City</label>
    <input type="text" class="form-control" asp-for="City"/>
</div>

<div class="mt-3">
    <label class="form-label">Region</label>
    <input type="text" class="form-control" asp-for="Region"/>
</div>

<div class="mt-3">
    <label class="form-label">PostalCode</label>
    <input type="text" class="form-control" asp-for="PostalCode"/>
</div>

<div class="mt-3">
    <label class="form-label">Description</label>
    <input type="text" class="form-control" asp-for="Description"/>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Register</button>
</div>
</form>