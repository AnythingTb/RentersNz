@model RentersNz.Models.Renter

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-5 font-weight-bold font-montserrat h1-custom">Create a New Renter</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RenterName" class="control-label font-weight-bold font-montserrat"></label>
                <input asp-for="RenterName" class="form-control rounded-border-20" />
                <span asp-validation-for="RenterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RenterDescription" class="control-label font-weight-bold font-montserrat"></label>
                <input asp-for="RenterDescription" class="form-control rounded-border-20" />
                <span asp-validation-for="RenterDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bedrooms" class="control-label font-weight-bold font-montserrat"></label>
                <input asp-for="Bedrooms" class="form-control rounded-border-20" />
                <span asp-validation-for="Bedrooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bathrooms" class="control-label font-weight-bold font-montserrat"></label>
                <input asp-for="Bathrooms" class="form-control rounded-border-20" />
                <span asp-validation-for="Bathrooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimalSupport" class="control-label font-weight-bold font-montserrat"></label>
                <input asp-for="AnimalSupport" class="form-control rounded-border-20" />
                <span asp-validation-for="AnimalSupport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SquareFootprint" class="control-label font-weight-bold font-montserrat"></label>
                <input asp-for="SquareFootprint" class="form-control rounded-border-20" />
                <span asp-validation-for="SquareFootprint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitorStandAlone" class="control-label font-weight-bold font-montserrat"></label>
                <input asp-for="UnitorStandAlone" class="form-control rounded-border-20" />
                <span asp-validation-for="UnitorStandAlone" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn custom-button">Create</button>
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        font-family: 'Montserrat', sans-serif;
        font-size: 16px;
        line-height: 1.5;
        color: #333;
        background-color: #f4f4f4;
    }

    h1.h1-custom {
        font-size: 3rem;
        font-weight: bold;
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .form-control {
        border: 2px solid #333;
        border-radius: 20px;
        font-size: 16px;
        padding: 8px;
        margin-bottom: 10px;
    }

    .custom-button {
        background-color: transparent;
        border: 2px solid #ddd;
        color: #333;
        padding: 12px 24px;
        border-radius: 20px;
        font-size: 18px;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
    }

        .custom-button:hover {
            background-color: #ddd;
            border-color: #333;
            color: #333;
        }

    .rounded-border-20 {
        border-radius: 20px;
    }
</style>
