@model IEnumerable<RentersNz.Models.Review>

@{
    ViewData["Title"] = "Reviews";
}

<h1 class="text-center mb-4">Leave a Review</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Renter ID</th>
                        <th>Property ID</th>
                        <th>Rating</th>
                        <th>Review Text</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.RenterId)</td>
                            <td>@Html.DisplayFor(modelItem => item.PropertyId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                            <td>@Html.DisplayFor(modelItem => item.ReviewText)</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.ReviewId" class="btn btn-sm btn-outline-dark">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.ReviewId" class="btn btn-sm btn-outline-dark">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.ReviewId" class="btn btn-sm btn-outline-dark">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Create" class="btn btn-primary">Leave a Review</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
