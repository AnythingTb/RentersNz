@{
    ViewData["Title"] = "RentersNz";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RentersNz</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RentersNz.styles.css" asp-append-version="true" />

    <!-- Integrate Google Font - Roboto -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            line-height: 1.5;
            color: #333;
            background-color: #f4f4f4;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 2rem;
            font-family: 'Roboto', sans-serif; /* Apply Roboto font to header title */
            text-transform: uppercase; /* Uppercase text */
            letter-spacing: 2px; /* Add letter spacing */
            color: #333; /* Color for the header title */
        }

        .house-info {
            display: none;
        }

        .house-listing:hover .house-info {
            display: block;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <h1 class="navbar-brand m-0 p-0" asp-area="" asp-controller="Home" asp-action="Index">RentersNz</h1>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown" id="informationDropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="registerDropdown" role="button" aria-expanded="false">
                                ℹ️ Information
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="registerDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Landlords" asp-action="Index">Landlord</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Renters" asp-action="Index">Renter</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Properties" asp-action="Index">Properties</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="leases" asp-action="Index">Leases</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Reviews" asp-action="Index">Reviews</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Privacy" asp-action="Index">Privacy Policy</a></li>
                           
                            </ul>
                        </li>
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - RentersNz - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Show dropdown on hover
        $('#informationDropdown').hover(function () {
            $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeIn(500);
        }, function () {
            $(this).find('.dropdown-menu').stop(true, true).delay(200).fadeOut(500);
        });
    </script>
</body>
</html>
